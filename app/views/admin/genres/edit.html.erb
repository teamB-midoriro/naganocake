<div class="container">
  <%= render 'layouts/errors', obj: @genre %>
  <div class="row justify-content-center">
    <h3 class="my-5">ジャンル編集</h3>
  </div>
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
  <div class="row justify-content-center mt-3">
    <div class="col-md-2">
      <%= f.label :name, "ジャンル名" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.submit "更新", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>