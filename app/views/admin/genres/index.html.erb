<p class="notice"><%= notice %></p>

<h3 class="text-center">ジャンル一覧・追加</h3>
<%= render 'layouts/errors', obj: @genre %>
<%= form_with model: @genre, url: admin_genres_path do  |f| %>
<div class="row justify-content-center my-3">
  <div class="col-md-2">
    <%= f.label :name, "ジャンル名", class: "form-label" %>
  </div>
  <div class="col-md-3">
    <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %>
  </div>
  <div class="col-md-3">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
</div>
<% end %>

<div class="row justify-content-center">
  <div class="col-md-5">
  <table class="table">
    <thead>
      <tr class="table-color">
        <td style="width: 70%">ジャンル名</td>
        <td style="width: 30%"></td>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>