<p class="notice"><%= notice %></p>

<h5 class="col-2 text-center">ジャンル一覧・追加</h5>
<table class="">
  <tbody>
  <%= form_with model: @genre, url: admin_genres_path do  |f| %>
    <tr>
      <td><%= f.label :name, "ジャンル名", class: "form-label" %></td>
      <td><%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %></td>
      <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div>
  <table>
    <thead>
      <tr>
        <th>ジャンル名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>