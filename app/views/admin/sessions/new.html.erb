<div class='container'>
  <div class='row'>
    <div class="col-8 mx-3 mt-3">
      <div class="bg-body-secondary ">
        <h5 class="text-left">管理者ログイン</h5>
      </div>

      <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group d-flex my-3">
          <div class="my-2 mx-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
          </div>
        </div>

        <div class="form-group d-flex my-3">
          <div class="my-2 ml-3 mr-4">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="col-8 ml-4">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <div class="actions col-1">
          <%= f.submit "ログイン",class: 'btn py-2 px-4 btn-primary' %>
        </div>
      <% end %>
      </div>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
