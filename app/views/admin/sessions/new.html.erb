<div class='container'>
  <div class='row justify-content-center'>
    <div class="col-md-10">
      <h5 class="text-left mt-5">管理者ログイン</h5>

      <div class="col-md-10 my-5 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group d-flex my-3">
          <div class="my-2 mx-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
          </div>
        </div>

        <div class="form-group d-flex my-3">
          <div class="my-2 ml-3 mr-4">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="col-8 ml-4">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <div class="d-flex">
          <div class="col-md-2 ml-4 mr-2"></div>
          <div class="actions">
            <%= f.submit "ログイン",class: 'btn py-2 px-4 btn-primary' %>
          </div>
        </div>
      <% end %>
      </div>

    </div>
  </div>
</div>
