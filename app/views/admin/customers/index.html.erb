<div class="container">
  <div class="row">
    <div class="col">
    <h5 class="text-left">会員一覧</h5>

    <table class="table my-3 table-borderd mx-auto">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
          <td><%= customer.email %></td>
          <td><%= customer.customer_status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    </div>
  </div>
</div>