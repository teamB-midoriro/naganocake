<div class="container">
  <div class="row justify-contents-center">
    <div class="col-md-10 mx-auto">
      <h5 class="mt-3"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h5>

      <%= render "layouts/errors", obj: @customer %>
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>

　　　<table class="my-3">
　　　  <tr>
          <td>会員ID</td>
          <td></td>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>

　　　  <tr>
　　　    <td><label>名前</label></td>
　　　    <td></td>
　　　    <td><%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", class: "form-control" %></td>
　　　    <td></td>
　　　    <td><%= f.text_field :first_name, autocomplete: "given-name", class: "form-control" %></td>
　　　  </tr>

　　　  <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td><label>フリガナ</label></td>
          <td></td>
          <td><%= f.text_field :last_name_kana, autocomplete: "name", class: "form-control" %></td>
          <td></td>
          <td><%= f.text_field :first_name_kana, autocomplete: "name", class: "form-control" %></td>
        </tr>

        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td><%= f.label :postal_code, "郵便番号" %></td>
          <td></td>
          <td><%= f.text_field :postal_code, autocomplete: "postal-code", class: "form-control" %></td>
        </tr>

        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td></td>
          <td colspan="3"><%= f.text_field :address, autocomplete: "shipping", class: "form-control" %></td>
        </tr>

        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td><%= f.label :telephone_number, "電話番号" %></td>
          <td></td>
          <td><%= f.text_field :telephone_number, autocomplete: "tel-national", class: "form-control" %></td>
        </tr>

        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td></td>
          <td><%= f.email_field :email, autocomplete: "email", class: "form-control" %></td>
        </tr>

        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td><%= f.label :is_active, "会員ステータス" %></td>
          <td></td>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", { value: :true } %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", { value: :false } %>
          </td>

        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td>
            <%= f.submit "変更を保存", class: 'btn px-4　my-3 btn-success' %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>