<div class="container">
  <div class="row">
    <div class="col">
      <h5><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h5>

      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
      <%= render "layouts/errors", obj: @customer %>
　　　<div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <label>氏名</label>
        </div>
        <div>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", class: "form-control" %>
        </div>
        <div class="mx-3">
          <%= f.text_field :first_name, autocomplete: "given-name", class: "form-control" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <label>フリガナ</label>
        </div>
        <div>
          <%= f.text_field :last_name_kana, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="mx-3">
          <%= f.text_field :first_name_kana, autocomplete: "name", class: "form-control" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <%= f.label :postal_code, "郵便番号" %>
        </div>
        <div>
          <%= f.text_field :postal_code, autocomplete: "postal-code", class: "form-control" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <%= f.label :address, "住所" %>
        </div>
        <div>
          <%= f.text_field :address, autocomplete: "shipping", class: "form-control" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <%= f.label :telephone_number, "電話番号" %>
        </div>
        <div>
          <%= f.text_field :telephone_number, autocomplete: "tel-national", class: "form-control" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="d-flex my-3">
        <div class="mx-3">
          <%= f.label :is_active, "会員ステータス" %>
        </div>
        <div class="mr-2">
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効", { value: :true } %>
        </div>
        <div>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "退会", { value: :false } %>
        </div>
      </div>

      <%= f.submit "変更を保存", class: 'btn px-4　my-3 btn-success' %>
      <% end %>

    </div>
  </div>
</div>