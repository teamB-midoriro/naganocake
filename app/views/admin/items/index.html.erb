<div class="container">
  <div class="row justify-content-around my-5">
  <h3 class="">商品一覧</h3>
  <div class="">
    <%= link_to '+', new_admin_item_path, class: "btn btn-sm btn-success" %>
  </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td>商品ID</td>
        <td>商品名</td>
        <td>税抜価格</td>
        <td>ジャンル</td>
        <td>ステータス</td>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active %></td>
      </tr>
      <% end %>
      <%= paginate @items %>
    </tbody>
  </table>

</div>
