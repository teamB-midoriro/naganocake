<div class="container">
  <h3 class="my-5">商品詳細</h3>
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.item_image, size:"200x200" %>
    </div>
    <div class="col-md-7 offset-md-1">
      <table class="table">
        <thead>
          <tr></tr>
        </thead>
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td><%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited)%>) 円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <% if @item.is_active %>
              <td class="text-success"><strong>販売中</strong></td>
            <% else %>
              <td class="text-muted"><strong>販売停止</strong></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <div class="row justify-content-center">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>