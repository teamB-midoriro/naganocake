<div class="container">
  <h3 class= "my-5">商品新規登録</h3>
  <% if @item.errors.any? %>
  <div class="alert alert-danger">
    <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <%= form_with model: @item,url: admin_items_path do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label "商品画像", class: "col-sm-3 col-form-label" %>
          <%= f.file_field :item_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label "商品名", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "商品説明", class: "col-sm-3 col-form-label" %>
          <%= f.text_area :introduction, rows: "5", class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :genre_id, "ジャンル", class: "col-sm-3 col-form-label" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {}, {class: 'form-control'} %>
        </div>
        <div class="form-group">
          <%= f.label "税抜価格", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :price %> 円
        </div>
        <div class="form-check">
          <%= f.label "販売ステータス" %>
          <%= f.radio_button :is_active,"true" %>販売中
          <%= f.radio_button :is_active,"false" %>販売停止中
        </div>
        <div class="d-grid gap-2 col-6 mx-auto">
          <%= f.submit "新規登録", class: "btn btn-lg btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>