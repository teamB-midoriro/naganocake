<div class="container">
  <h3>商品新規登録</h3>
  <%= render 'layouts/errors', obj: @item %>
  <%= form_with model: @item,url: admin_items_path do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="form-group row">
          <%= f.label "商品画像", class: "col-sm-4 col-form-label" %>
          <span class="col-sm-7"><%= f.file_field :item_image, accept: "image/*" %></span>
        </div>
        <div class="form-group row">
          <%= f.label "商品名", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :name, class: "col-sm-9 form-control" %>
        </div>
        <div class="form-group row">
          <%= f.label "商品説明", class: "col-sm-3 col-form-label" %>
          <%= f.text_area :introduction, rows: "5", class: "col-sm-9 form-control"%>
        </div>
        <div class="form-group row">
          <%= f.label :genre_id, "ジャンル", class: "col-sm-3 col-form-label" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {}, {class: 'col-sm-9 form-control'} %>
        </div>
        <div class="form-group row">
          <%= f.label "税抜価格", class: "col-sm-3 col-form-label" %>
          <span class="col-sm-8"><%= f.text_field :price, class: "form-control" %></span>
          <span class="col-sm-1">円</span>
        </div>
        <div class="form-check row p-0">
          <%= f.label "販売ステータス", class: "col-sm-4 col-form-label" %>
          <span class="col-sm-4"><%= f.radio_button :is_active,"true" %>販売中</span>
          <span class="col-sm-4"><%= f.radio_button :is_active,"false" %>販売停止中</span>
        </div>
        <div class="form-group row mt-2">
          <div class="col-6 mx-auto">
            <%= f.submit "新規登録", class: "btn btn-lg btn-success" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>