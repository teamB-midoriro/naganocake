<div class="container">
  <h3 class="my-5">注文履歴一覧</h3>
  <table class="table">
    <thead>
      <tr>
        <td>購入日時</td>
        <td>購入者</td>
        <td>注文個数</td>
        <td>注文ステータス</td>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_detail_path(order) do %>
            <%= order.created_at %>
          <% end %>
        </td>
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <td><%= order.order_detail.amount %></td>
        <td><%= order.order_detail.status_i18n %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>