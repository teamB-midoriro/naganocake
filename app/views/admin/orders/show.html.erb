<div class="container">
  <h3 class="my-2">注文履歴詳細</h3>
  <div class="row mt-3">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td style="width: 20%"><strong>購入者</strong></td>
          <td style="width: 80%">
            <%= link_to admin_customer_path(@order.customer) do %>
              <%= @order.customer.last_name %> <%= @order.customer.first_name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><strong>注文日</strong></td>
          <td><%= l @order.created_at %></td>
        </tr>
        <tr>
          <td><strong>配送先</strong></td>
          <td>〒<%= @order.postal_code %> <%= @order.address %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <td><strong>支払方法</strong></td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td><strong>注文ステータス</strong></td>
          <%= form_with model: @order, url: admin_order_path(@order), method: :patch do |f| %>
            <td>
              <%= f.select :status, Order.statuses_i18n.invert %>
              <%= f.submit "更新", class: "btn btn-success" %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row mt-2">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.item.add_tax_price * order_detail.amount).to_s(:delimited) %></td>
            <td>
              <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch do |f| %>
                <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert %>
                <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3 offset-md-1">
      <table class="table">
        <tbody>
          <tr>
            <td><strong>商品合計</strong></td>
            <td><%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %> 円</td>
          </tr>
          <tr>
            <td><strong>送料</strong></td>
            <td><%= @order.shipping_cost %> 円</td>
          </tr>
          <tr>
            <td><strong>請求金額合計</strong></td>
            <td><%= @order.total_payment.to_s(:delimited) %> 円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>