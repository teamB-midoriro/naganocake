<div class='container'>
  <div class='row'>
    <div class="col-8 mx-3 mt-3">
      <p class="notice"><%= notice %></p>
      <div class="bg-body-secondary ">
        <h5 class="text-left">ログイン</h5>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group d-flex my-3">
          <div class="my-2 mx-3">
            <label>メールアドレス</label>
          </div>
          <div class="col-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
          </div>
        </div>

        <div class="form-group d-flex my-3">
          <div class="my-2 ml-3 mr-4">
            <label>パスワード</label>
          </div>
          <div class="col-8 ml-4">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

      　　<% if devise_mapping.rememberable? %>
      　　　　　<div class="field">
        　　　　　<%= f.check_box :remember_me %>
        　　　　<%= f.label :remember_me %>
      　　　　</div>
      　　<% end %>

          <div class="actions col-1">
            <%= f.submit "ログイン",　class: 'btn py-2 px-4 btn-primary' %>
          </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>