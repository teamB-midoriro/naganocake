<div class="container">
  <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto">
    <div class="row">
      <div class="col-md-4">
        <h4>ショッピングカート</h4>
      </div>
      <div class="col-md-4 offset-md-4">
        <%= link_to "カートの中身を空にする", cart_items_destroy_all_path, method: :delete, data: { confirm: '商品を全て削除しますか？' }, class: "btn btn-sm btn-danger" %>
      </div>
    </div>

    <table class="table table-bordered border-black">
      <thead>
        <tr class="table-active">
          <th>商品名</th>
          <th>単価(税込み)</th>
          <th>数量</th>
          <th>小計</th>
          <!--空白セルのためbrタグ入れてます-->
          <th><br></th>
        </tr>
      </thead>
      <tbody>
        <% @total = 0 %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item, :iem_image, size:"100x50" %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更", class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td>
              <%= link_to "削除する", destroy_cart_item_path(cart_item.id), method: :delete, data: { confirm: '商品を削除しますか？' }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
          <% @total += cart_item.subtotal %>
        <% end %>
      </tbody>
    </table>
    <div class="row ">
      <div class="col-md-4">
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
      </div>
      <div class="col-md-4 offset-md-4">
        <table class="table table-bordered border-black" %>
        <tr>
          <th>合計金額</th>
          <th><%= @total %></th>
        </tr>
        </table>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>