<div class="container">
  <h4>注文履歴詳細</h4>
  <div class="container pull-left">
    <h6>注文情報</h6>
    <table class="table">
      <tr>
        <th>注文日</th>
        <td><%= l @order.created_at %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <p><%= @order.postal_code %></p>
        <p><%= @order.address %></p>
        <p><%= @order.name %></p>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status_i18n %></td>
      </tr>
    </table>
  </div>
  <div class="container pull-left">
    <h6>請求金額</h6>
    <div class="table">
      <tr>
        <th>商品合計</th>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @oder.shipping_cost.to_s(:delimited) %></td>
      </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
    </div>
  </div>
  <div class="row">
    <h6>注文内容</h6>
    <div class="table">
      <tr>
        <th>商品</th>
        <th>個数</th>
        <th>単価(税込)</th>
        <th>小計</th>
        <%= @order_details.each do |order_detail| %>
          <td><%= order_detail.name %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
        <% end %>
      </tr>
    </div>
  </div>
</div>