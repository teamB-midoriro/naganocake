<div class="container">
  <h4>注文履歴詳細</h4>
  <div class="row">
    <div class="col-6">
      <h6 class="font-weight-bold my-3">注文情報</h6>
      <table class="table table-bordered border-black">
        <tr>
          <th class="table-active font-weight-normal">注文日</th>
          <td><%= l @order.created_at %></td>
        </tr>
        <tr>
          <th class="table-active font-weight-normal">配送先</th>
          <td  class="lh-1">
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="table-active font-weight-normal">支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th class="table-active font-weight-normal">ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-4">
      <h6 class="font-weight-bold my-3">請求金額</h6>
      <table class="table table-bordered border-black">
        <tr>
          <th class="table-active font-weight-normal">商品合計</th>
          <% @sum = @order.total_payment - @order.shipping_cost %>
          <td>¥ <%= @sum.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-active font-weight-normal">配送料</th>
          <td>¥ <%= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-active">ご請求額</th>
          <td>¥ <%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <h6 class="font-weight-bold  my-3">注文内容</h6>
      <table class="table table-bordered border-black">
        <thead>
          <tr class="table-active">
            <th>商品</th>
            <th>個数</th>
            <th>単価(税込)</th>
            <th>小計</th>
          </tr>
        </thead>
        <tboby>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.amount %></td>
              <td>¥ <%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
              <td>¥ <%= order_detail.subtotal %></td>
            </tr>
          <% end %>
        </tboby>
      </table>
    </div>
  </div>
</div>