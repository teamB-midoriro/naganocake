<div class="container">
  <diw class="row my-5">
    <div class="col-md-2">

    </div>
    <div class="col-md-10">
      <h3><strong>商品一覧</strong> (全 <%= @items.count %>件)</h3>
      <div class="row justify-content-center">
        <% @items.each do |item| %>
          <div>
            <div>
              <%= link_to item_path(item) do %>
                <%= image_tag item.item_image, size: "200x200" %>
              <% end %>
            </div>
            <div><%= item.name %></div>
            <div>¥<%= item.add_tax_price.to_s(:delimited) %></div>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </diw>
</div>