<!--商品詳細-->
<div class="container justify-content-center mt-5 ">
  <p><%= render 'layouts/errors', obj: @cart_item %></p>
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/genres/genre', genres: @genres %>
    </div>
    <div class="col-md-5">
      <%= image_tag @item.item_image, size: "200x200" %>
    </div>

    <div class="col-md-4 ">
      <h2><%= @item.name %></h2>
      <h5 class="mb-5"><%= @item.introduction %></h5>
      <h3 class="mt-5">¥<%= @item.add_tax_price.to_s(:delimited) %><span>(税込み)</span></h3>
    </div>
<!--ここからカートに商品を追加するための画面-->
    <% if customer_signed_in? %>
      <div class="col d-flex justify-content-end">
        <%= form_with model: @cart_item do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <span class="mr-5"><%= f.select :amount, *[1..50] %></span>
          <span><%= f.submit "カートに入れる", class: "btn btn-success" %></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>