<div class="container">
  <div class="row my-5">
    <div class="col-md-2">

    </div>
    <div class="col-md-4">
      <%= image_tag @item.item_image, size: "200x200" %>
    </div>
    <div class="col-md-6">
      <div><strong><%= @item.name %></strong></div>
      <div class="mt-3"><%= @item.introduction %></div>
      <div class="mt-3"><strong>¥<%= @item.add_tax_price.to_s(:delimited) %></strong><span>(税込)</span></div>
      <div class="mt-1">
        <% if @item.is_active == true %>
          <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
            <%= f.select :quantity, *[1..10], {include_blank: "個数選択"}, class: "form-select"%>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.submit "カートに入れる", class: "btn btn-success" %>
          <% end %>
        <% else %>
          <p>現在、売り切れのため購入できません。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>