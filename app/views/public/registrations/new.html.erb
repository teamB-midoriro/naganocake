<div class='container'>
  <div class='row'>
    <div class="col-8 mx-3 mt-3">
      <!--新規会員登録-->
      <h5>新規会員登録</h5>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <label>名前</label>
        </div>
        <div>
          (姓)
        </div>
        <div>
          <%= f.last_name_field :last_name, autofocus: true, autocomplete: "", class: "form-control", placeholder: "令和" %>
        </div>
        <div>
          <label>(名)</label>
        </div>
        <div>
          <%= f.first_name_field :first_name, autocomplete: "", class: "form-control", placeholder: "道子" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <label>フリガナ</label>
        </div>
        <div>
          <label>(セイ)</label>
        </div>
        <div>
          <%= f.last_name_kana_field :last_name_kana, autocomplete: "", class: "form-control", placeholder: "レイワ" %>
        </div>
        <div>
          <label>(メイ)</label>
        </div>
        <div>
          <%= f.first_name_kana_field :first_name_kana, autocomplete: "", class: "form-control", placeholder: "ミチコ" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <label>メールアドレス</label>
        </div>
        <div>
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <label>郵便番号(ハイフンなし)</label>
        </div>
        <div>
          <%= f.postal_code_field :postal_code, autocomplete: "", class: "form-control", placeholder: "0000000" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <label>住所</label>
        </div>
        <div>
          <%= f.address_field :address, autocomplete: "", class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <label>電話番号(ハイフンなし)</label>
        </div>
        <div>
          <%= f.telephone_number_field :telephone_number, autocomplete: "", class: "form-control", placeholder: "0000000000" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <label>パスワード(6文字以上)</label>
        </div>
        <div>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group d-flex my-3">
        <div class="my-2 mx-3">
          <label>パスワード(確認用)</label>
        </div>
        <div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "新規登録",class: 'btn py-2 px-4 btn-success'%>
      </div>
     <% end %>

     <!--登録済み会員-->
     <h5>既に登録済みの方</h5>
     <p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>

     <%= render "public/shared/links" %>

    </div>
  </div>
</div>
