<div class="container">
  <p class="notice"><%= notice %></p>
  <h3 class="my-5">配送先登録/一覧</h3>
  <%= render 'layouts/errors', obj: @address %>
  <%= form_with model: @address, url: addresses_path do |f| %>
    <div class="row mt-3 form-group">
      <div class="col-md-2">郵便番号(ハイフンなし)</div>
      <div class="col-md-3">
        <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %>
      </div>
    </div>
    <div class="row mt-3 form-group">
      <div class="col-md-2">住所</div>
      <div class="col-md-6">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
      </div>
    </div>
    <div class="row mt-3 form-group">
      <div class="col-md-2">宛名</div>
      <div class="col-md-3">
        <%= f.text_field :name, placeholder: "令和道子", class: "form-control" %>
      </div>
      <div class="col-md-3 offset-md-3">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
  <div class="row mt-3 mx-auto">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <th style="width: 10%"><%= address.postal_code %></th>
            <th style="width: 50%"><%= address.address %></th>
            <th style="width: 20%"><%= address.name %></th>
            <th style="width: 20%">
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
              <%= link_to "削除する", address_path(address), class: "btn btn-danger", method: :delete, data: { confirm: "削除してもよろしいですか？" } %>
            </th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>